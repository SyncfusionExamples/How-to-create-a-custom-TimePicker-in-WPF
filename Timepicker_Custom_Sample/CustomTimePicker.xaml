<UserControl x:Class="SfTimepicker_Like_Sample.CustomTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SfTimepicker_Like_Sample"
             mc:Ignorable="d" xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
             d:DesignHeight="20" d:DesignWidth="140">
    <Grid>
        <Grid >
           
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <syncfusion:SfTextBoxExt x:Name="txBoxs" HorizontalAlignment="Center" Height="20" KeyDown="TextBox_KeyDown"  Text="" VerticalAlignment="Center" Width="120"/>
                <StackPanel Orientation="Vertical" Width="17" Height="20">
                    <Button x:Name="upArrow" Margin="0" Height="10"  Click="upArrow_Click">
                        <Image Source="Images/upArrow.png" Height="8" />
                    </Button>
                    <Button x:Name="downArrow" Margin="0" Height="10" Click ="upArrow_Click" >
                        <Image Source="Images/downArrow.png"  Height="8" Stretch="Uniform" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
